{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Required for composite projects */
    "outDir": "./dist",
    "composite": true,
    "declaration": true
  },
  "extends": "./tsconfig.json",
  "include": ["src/**/*", "src/types", "google_end/gAuthURL.ts", "google_end/OAuth.ts", "google_end/gAuthRoute.ts", "google_end/googleapis.ts"]
}